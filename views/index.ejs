<%include partials/header%>
  
  <div class="pimg1">
    
    <div class="ptext">
      <span class="border">
        Fitness &amp; Health is a Mentality
      </span>
      <br>
      <br>
    </div>
  </div>

  <section class="section section-light">
    <div class="programs-offered">
      <div class="container">
            <div class="row">
              <h2>What we offer</h2>
              <%= classes.forEach(function(classes){ %>
              <div class="col-lg-4 col-sm-6">
                <div class="thumbnail">
                  <img src ="<%= classes.image %>"  >
                  <h3><%= classes.class %></h3>
                  <hr>
                  <p> <%= classes.description %></p>
  
                </div>
              </div>
             <% }); %>   
             <div>
               <% if(!currentUser){ %>
                  <a href="/login" class="btn btn-select-plan btn-lg">Enroll</a>
               <% } else { %>
                  <a href="enroll" class="btn btn-success btn-lg">Enroll here!</a>
            <% } %>
               
             </div> 
            </div>
            
          </div>
  
  
    </div>
    
    
  </section>
  

  <div class="pimg2">
    <div class="ptext">
      <span class="border trans">
        Rocky Gym
      </span>
    </div>
  </div>

  <section class="section section-dark">
    <div id="team-section" class="lightgray-section">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="heading-section text-center animate-box">
              <h2>Meet Our Trainers</h2>
            </div>
          </div>
        </div>
          <% trainer.forEach(function(trainer){ %>
        <div class="row text-center">
          

          <div class="col-md-4 col-sm-6">
            <div class="team-section-grid animate-box" style="background-image: url(<%= trainer.image %>);">
              <div class="overlay-section">
                <div class="desc">
                  <h3><%= trainer.firstname %> <%= trainer.lastname %></h3>
                  <span><%= trainer.service %></span>
                  <p><%= trainer.description %></p>
                  <p class="social-icons">
                    <a href="#"><i class="fab fa-twitter-square"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                  </p>
                </div>
              </div>
            </div>
          </div>


          <% }); %>    

        </div>
      </div>
    </div>
  </section>

  <div class="pimg3">
    <div class="ptext">
      <span class="border trans">
      </span>
    </div>
    <div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3 col-md-pull-3 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 table">
            <div class="intro table-cell box-area">
              <div class="animate-box">
                <h1>Pay now and <br>Start your Journey</h1>
                <a href="#login_form" class="btn btn-primary" style="border-radius: 5rem;">Become A Member</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>

  <section class="section section-dark">
    <div id="pricing">
    <div class="container">
      <div class="row animate-box">
        <div class="col-md-8 col-md-offset-2 text-center heading">
          <h2>Pricing Plan</h2>
          <br>
          <br>
        </div>
      </div>
      <div class="row">
        <div class="pricing">
          <div class="col-md-4 col-sm-6 animate-box">
            <div class="price-box">
              <h2 class="pricing-plan">Monthly Membership</h2>
              <div class="price"><sup class="currency">Ksh</sup>1000<small>/month</small></div>
              <p style="font-size: 18px;">
                Your standard one month membership. Recharge your access every month.
                <hr>
                Overview of classes;
              </p>
              <ul class="classes">
                <li>10+ Cardio Classes</li>
                <li class="color">10+ Swimming Lesson</li>
                <li>10+ Yoga Classes</li>
                <li class="color">10+ Body Building</li>
                <li>10+ Dance Classes</li>
                <li class="color">10+ Body Combat Classes</li>

              </ul>
                <% if(!currentUser){ %>
                <a href="/login" class="btn btn-select-plan btn-sm">Select Plan</a>
             <% } else { %>
                <a href="#" class="btn btn-select-plan btn-sm">Select Plan</a>
          <% } %>
              
            </div>
          </div>

          

          <div class="col-md-4 col-sm-6 animate-box">
            <div class="price-box popular">
              <h2 class="pricing-plan pricing-plan-offer">Three Month Membership <span>Best Offer</span></h2>
              <div class="price"><sup class="currency">Ksh</sup>7500<small>/3 months</small></div>
              <p style="font-size: 18px;">
                Sign up for three months of gym access and get 1 free Personal Training session.
                <hr>
                Overview of classes;
              </p >
              <ul class="classes">
                <li>20+ Cardio Classes</li>
                <li class="color">20+ Swimming Lesson</li>
                <li>30+ Yoga Classes</li>
                <li class="color">20+ Body Building</li>
                <li>20+ Dance Classes</li>
                <li class="color">20+ Body Combat Classes</li>

              </ul>
               <% if(!currentUser){ %>
                <a href="/login" class="btn btn-select-plan btn-sm">Select Plan</a>
             <% } else { %>
                <a href="#" class="btn btn-select-plan btn-sm">Select Plan</a>
          <% } %>
            </div>
          </div>

          <div class="col-md-4 col-sm-6 animate-box">
            <div class="price-box">
              <h2 class="pricing-plan">Six Month Membership</h2>
              <div class="price"><sup class="currency">Ksh</sup>15000<small>/6 months</small></div>
              <p style="font-size: 18px;">
                Stay committed by signing up for six months, and we will reward you with two free Personal Training Sessions. 
                                <hr>
                Overview of classes;
              </p>
              <ul class="classes">
                <li>30+ Cardio Classes</li>
                <li class="color">30+ Swimming Lesson</li>
                <li>30+ Yoga Classes</li>
                <li class="color">30+ Body Building</li>
                <li>30+ Dance Classes</li>
                <li class="color">30+ Body Combat Classes</li>


              </ul>
                 <% if(!currentUser){ %>
                <a href="/login" class="btn btn-select-plan btn-sm">Select Plan</a>
             <% } else { %>
                <a href="#" class="btn btn-select-plan btn-sm">Select Plan</a>
          <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </section>

