<%include partials/header%>
  
  <div class="pimg1">
    
    <div class="ptext">
      <span class="border">
        Fitness &amp; Health is a Mentality
      </span>
      <br>
      <br>
    </div>
  </div>

  <section class="section section-light">
    <div class="programs-offered">
      <div class="container">
            <div class="row">
              <h2>What we offer</h2>
              <% classes.forEach(function(classes){ %>
              <div class="col-lg-4 col-sm-6">
                <div class="thumbnail">
                  <img src ="<%= classes.image %>"  >
                  <h3><%= classes.class %></h3>
                  <hr>
                  <p> <%= classes.description %></p>
  
                </div>
              </div>
             <% }); %>   
             <div>
               <% if(!currentUser){ %>
                  <a href="/login" class="btn btn-primary btn-lg">Enroll</a>
               <% } else { %>
                  <a href="enroll" class="btn btn-success btn-lg">Enroll here!</a>
            <% } %>
               
             </div> 
            </div>
            
          </div>
    </div>
  </section>
  
  <div
	id="schedule"
	class="bg"
	style="background-image: url(https://images.unsplash.com/photo-1454560830408-e68fb19d3e8c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6d375ae3da87f73f25017dd370c2d174&auto=format&fit=crop&w=1132&q=80);"
>
