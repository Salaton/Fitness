
<%include partials/header%>


<div class = "limiter">
  <div class="container-login100">
    <div class="wrap-login100">
                        <form action="/enroll" method="POST" class="login_form">
                                    <div class="row">
                                    <h2 class="title" style="text-align:center;">Enroll to a class</h2>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Username </label>
                                                <input type="text" class="form-control" name="username" value="<%= currentUser.username %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                    <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Email address</label>
                                                <input type="email" name="email" value=" <%= currentUser.email %> " class="form-control" placeholder="Email">
                                            </div>
                                        </div>
                                        </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Full Name</label>
                                                <input type="text" name="firstname" value="<%= currentUser.fullname%>" class="form-control" placeholder="First Name">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Class</label>
                                                <p>
                                                  Select the type of services you want 
                                                </p>
                                                <div>
                                                <label for="yoga" class="yoga">Yoga Class:
                                                  <input class="pretty p-default p-curve p-fill"  name="enroll" type="checkbox" value="Yoga">
                                                </label>
                                                </div>
                                                <div>
                                                <label for="dance" class="dance">Dance Class:
                                                  <input class="enroll" name="enroll" type="checkbox" value="Dance">
                                                </label>
                                                </div>
                                                <div>
                                                <label for="cardio" class="cardio">Cardio Class:
                                                  <input class="enroll" name="enroll" type="checkbox" value="Cardio">
                                                </label>
                                                </div>
                                                <div>
                                                <label for="swimming" class="swimming">Swimming Class:
                                                  <input class="enroll" name="enroll" type="checkbox" value="Swimming">
                                                </label>
                                                </div>
                                                <div>
                                                <label for="building" class="building">Body Building Class:
                                                  <input class="enroll" name="enroll" type="checkbox" value="Body Building">
                                                </label>
                                                </div>
                                                <div>
                                                <label for="combat" class="combat" >Body Combat Class:
                                                  <input class="enroll" name="enroll" type="checkbox" value="Body Combat">
                                                </label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    
                                <button class="btn btn-info btn-fill " type="submit" style="border-radius: 25rem; width: 100%;">Enroll</button>
                                <hr>    <div>
                                      

                                </div>
                                
                                    <div class="clearfix"></div>
                                </form>
                                <div class="login100-more" style="background-image: url('/img-gif/graphic3.svg');">

                                <div class="enrolled_class">
                                
                                <h3>You are currently enrolled to:</h3>
                                   
                                     <% enroll.forEach(function(enroll){ %>
                                     <% if (currentUser.username==enroll.username){%>
                                        <h4><%= enroll.enroll %></h4>
                                     <% } else { -%>
                                        <!-- <h4>You are not registered for any class</h4> -->
                                     <% } %>
                                     <% }); %> 
                                </div>
                                

                                
            </div>
        </div>
    </div>
                            

                           
    </div>
</div>


</body>

    <!--   Core JS Files   -->
    <script src="assets/js/jquery-1.10.2.js" type="text/javascript"></script>
	<script src="assets/js/bootstrap.min.js" type="text/javascript"></script>

	<!--  Checkbox, Radio & Switch Plugins -->
	<script src="assets/js/bootstrap-checkbox-radio-switch.js"></script>

	<!--  Charts Plugin -->
	<script src="assets/js/chartist.min.js"></script>

    <!--  Notifications Plugin    -->
    <script src="assets/js/bootstrap-notify.js"></script>

    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
	<script src="assets/js/light-bootstrap-dashboard.js"></script>

	<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
	<script src="assets/js/demo.js"></script>

</html>
