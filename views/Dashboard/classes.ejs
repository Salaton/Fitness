<%include partials/dashboardHeader%>

<div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Add Classes</h4>
                            </div>
                            <div class="content">
                                <form action="/Dashboard/classes" method="POST">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Company</label>
                                                <input type="text" class="form-control" disabled placeholder="Company" value="Rocky Gym">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Class</label>
                                                <input type="text" name="class" class="form-control" placeholder="Class name" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Image</label>
                                                <input type="text" name="image" class="form-control" placeholder="image url" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea rows="5" name="description" class="form-control" placeholder="Class description" value="Mike" required></textarea>
                                            </div>
                                        </div>
                                    </div>
                                   <hr>
                                    <button type="submit" class="btn btn-info btn-fill pull-right">Add Class</button>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    

                </div>
            </div>
        </div>



<div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Class Table </h4>
                                <p class="category">Here is a table that displays the offered classes and the respective trainer</p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>Name</th>
                                        <th>Trainer</th>
                                        <th>Description</th>
                                    </thead>
                                    <% classes.forEach(function(classes){ %>
                                    
                                        <tbody>
                                            <tr>
                                                <td><%= classes.class %></td>
                                                <td><%= classes.image %></td>
                                                <td><%= classes.description %></td>

                                            </tr>
                                        </tbody>

                                    <% }); %>    
                                                
                                </table>
                            </div>
                        </div>
                    </div>

</body>



    <!--   Core JS Files   -->
    <script type="text/javascript" src="../assets/js/todos.js"></script>
    <script src="assets/js/bootstrap.min.js" type="text/javascript"></script>

    <!--  Charts Plugin -->
    <script src="assets/js/chartist.min.js"></script>

    <!--  Notifications Plugin    -->
    <script src="assets/js/bootstrap-notify.js"></script>


    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="assets/js/light-bootstrap-dashboard.js"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="assets/js/demo.js"></script>

    <script type="text/javascript">
        $(document).ready(function(){

            demo.initChartist();

            $.notify({
                icon: 'pe-7s-gift',
                message: "Welcome to <b>Gym Dashboard</b> - where you can view the gym details."

            },{
                type: 'info',
                timer: 400
            });

        });
    </script>

</html>



